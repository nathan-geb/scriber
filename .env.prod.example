# Production Environment Variables for Scriber
# Copy this file to .env.prod and fill in the values

# Database (used by Docker Compose)
DB_USER=scriber
DB_PASSWORD=your_secure_password_here
DB_NAME=scriber

# Domain
DOMAIN_NAME=scriber.bernos.systems

# Authentication
JWT_SECRET=your_production_jwt_secret_here_min_32_chars

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here

# Stripe (Optional - for payment features)
STRIPE_SECRET_KEY=sk_live_your_stripe_key_here

# Sentry (Optional - for error monitoring)
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=
